{
  "compilerOptions": {
    "target": "es2017",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2018", "es2018.promise"],
    "baseUrl": "./src",
    "outDir": "lib/",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
